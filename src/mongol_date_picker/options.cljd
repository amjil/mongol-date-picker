(ns mongol-date-picker.options
  (:require ["package:flutter/material.dart" :as m]))

(def default-options
  {:item-extent 45.0
   :diameter-ratio 1.3
   :perspective 0.008
   :magnification 1.15
   :use-haptics true
   :digit-type :arabic ; 可选 :arabic 或 :mongol
   :text-style (m/TextStyle .fontSize 16.0 .color m.Colors/black54)
   :selected-color (-> m.Colors/blue (.withOpacity 0.08))})
